type User {
  id: ID! @id
  email: String @unique
  name: String!
  posts: [Post!]!
}

type Post {
  id: ID! @id
  title: String!
  published: Boolean! @default(value: false)
  author: User @relation(link: INLINE)
}

type TodoItem {
  id: ID! @id
  text: String!
  done: Boolean @default(value: false)
}
